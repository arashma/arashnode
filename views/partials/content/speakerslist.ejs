<article class="speakerslist">
    <section class="layout">
        <div class="speakers">
            <% artist.forEach(function (item) { %>
                <article class="artist group">
                    <h3> <%= item.title %>&nbsp;
                        <span class="small">
                       with  <a href="/speakers/<%= item.shortname %>"> <%= item.name %></a>
                    </span>
                    </h3>
                    <p>
                        <a href="/speakers/<%= item.shortname %>">
                     <img src="/images/speakers/<%= item.shortname %>_tn.jpg" alt="photo of <%= item.name %>" class="speaker">
                        </a>
                    </p>
           <% if(page !='home'){ %>
                    <% if(page =='artistList'){ %>
                        <%= item.summary %>
                    <% }else{ %>
                        <%- item.description %>
                        <% } %>
                    <% } %>
                </article>
            <% }) %>
        </div>
    </section>
</article>